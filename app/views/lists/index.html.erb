<div class="container">
  <div class="mt-5 ">
    <h2>Those are the lists that you already created:</h2>

    <div class="d-flex justify-content-between mt-4">

      <% @lists.each do |list| %>
        <%= <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')"> if photo.attached? %>
